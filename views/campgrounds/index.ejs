<%- include('../partials/header') -%>

<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>MY TREKS</h1>
            <p>These are the treks I have been to</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Trek</a>
            </p>
        </div>
    </header>
    <a href="/">Back to home page</a>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">    
                    <img src="<%= camp.image %>" >
                    <div class="caption">
                        <h3><%= camp.name %> </h3>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Info</a> 
                    </p>
                </div>
            </div>
            <% }) %> 
        </div>
</div>
        
<%- include('../partials/footer') -%>